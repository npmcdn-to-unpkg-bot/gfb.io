{
  "parser": "babel-eslint",
  "extends": "airbnb/base",

  "rules": {
    "no-global-assign": ["error", {"exceptions": ["Object"]}],
    "no-unsafe-negation": ["error"]
  },

  "env": {
    "es6": true,
    "browser": true
  },
  "parser-options": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "modules": true,
      "experimentalObjectRestSpread ": true,
      "objectLiteralShorthandMethods": true
    }
  },
  "settings": {
    "import/resolver": { "node": { "extensions": [ ".js", ".html", ".css" ] } }
  }
}
