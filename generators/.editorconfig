root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[package.json]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.coffee]
indent_size = 2

[*.php]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 4

[*.js]
indent_style = space
indent_size = 2
